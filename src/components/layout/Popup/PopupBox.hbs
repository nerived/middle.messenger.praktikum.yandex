<div class="popup">
  <div class="popup-overlay">
    {{#PopupContent }}
      {{#if title}}
        <div class="popup-title">
          {{title}}
        </div>
      {{/if}}
      {{#if descr}}
        <div class="popup-descr">
          {{{InputFile label='Select a file on your computer' name='avatar'}}}
        </div>
      {{/if}}
      {{{Button label="Save" type='submit'}}}
    {{/PopupContent}}
  </div>
</div>
