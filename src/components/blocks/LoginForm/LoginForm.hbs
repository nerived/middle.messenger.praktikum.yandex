  {{#Form}}
    {{#AuthformBox}}
      {{{AuthformHead title="Login"}}}

      {{#AuthformBody}}
        {{{Field placeholder="Login" label="Login" name='login'}}}
        {{{Field placeholder="Password" label="Password" name='password'}}}
      {{/AuthformBody}}

      {{#AuthformFooter}}
