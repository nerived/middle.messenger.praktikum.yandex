{
  "name": "ya-chat",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "postinstall": "husky install",
    "dev": "vite",
    "watch-ts": "tsc --noEmit --watch",
    "prebuild": "tsc --noEmit",
    "start": "npm run build && node ./server.js",
    "build": "vite build --emptyOutDir",
    "preview": "vite preview",
    "lint:script": "eslint src --ext .ts",
    "check-ts": "tsc --noEmit",
    "lint:style": "npx stylelint '**/*.scss'",
    "test": "mocha",
    "prepare": "husky install",
    "check-all": "npm run lint:script && npm run lint:style && npm test && npm run check-ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run check-all"
    }
  },
  "lint-staged": {
    "*.ts": "npm run check-ts"
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.4",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "chai": "^5.0.0",
    "create-esm-loader": "^0.2.5",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-jest": "^27.6.3",
    "esm-loader-css": "^1.0.6",
    "esm-loader-typescript": "^1.0.6",
    "esmock": "^2.6.2",
    "express": "^4.18.2",
    "husky": "^8.0.0",
    "jsdom": "^23.2.0",
    "lint-staged": "^15.2.0",
    "mocha": "^10.2.0",
    "node-esm-loader": "^0.2.5",
    "sass": "^1.69.5",
    "sinon": "^17.0.1",
    "stylelint": "^16.2.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "yarn-audit-fix": "^10.0.7"
  },
  "dependencies": {
    "handlebars": "^4.7.8",
    "nanoid": "^5.0.4"
  }
}
