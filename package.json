{
  "name": "ya-chat",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "watch-ts": "tsc --noEmit --watch",
    "prebuild": "tsc --noEmit",
    "start": "npm run build && node ./server.js",
    "build": "yarn check-all && vite build --emptyOutDir",
    "preview": "vite preview",
    "check-all": "yarn check-lint && yarn check-ts && yarn check-style && yarn test",
    "check-lint": "./node_modules/.bin/eslint src --ext .ts",
    "check-ts": "./node_modules/.bin/tsc --noEmit",
    "check-style": "stylelint '**/*.scss'",
    "test": "mocha"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn check-all",
      "pre-push": "yarn check-all"
    }
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.4",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "chai": "^5.0.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-jest": "^27.6.3",
    "esm-loader-css": "^1.0.6",
    "esm-loader-typescript": "^1.0.6",
    "esmock": "^2.6.2",
    "express": "^4.18.2",
    "husky": "^8.0.3",
    "jsdom": "^23.2.0",
    "mocha": "^10.2.0",
    "node-esm-loader": "^0.3.0",
    "sass": "^1.69.5",
    "sinon": "^17.0.1",
    "stylelint": "^15.11.0",
    "stylelint-scss": "^5.3.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "yarn-audit-fix": "^10.0.7"
  },
  "dependencies": {
    "handlebars": "^4.7.8",
    "nanoid": "^5.0.4"
  }
}
